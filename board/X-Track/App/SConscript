objs = DefineGroup('', src, depend = [''], CPPPATH = path)

exclude_dirs = ['lvgl']

for item in list:
    if item not in exclude_dirs:
        if os.path.isfile(os.path.join(cwd, item, 'SConscript')):
            objs = objs + SConscript(os.path.join(item, 'SConscript'))

Return('objs')
